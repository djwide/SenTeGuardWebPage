---
import Layout from '../../layouts/Layout.astro';
import BlogAdmin from '../../components/BlogAdmin';
---

<Layout title="Blog Admin">
    <section class="section-spacing max-w-4xl mx-auto space-y-6">
        <div class="space-y-3">
            <h1>Blog Admin</h1>
            <p class="text-gray-300">
                Publish posts to Firestore. Only the admin account set in <code>PUBLIC_ADMIN_EMAIL</code> can create
                posts. Comments remain restricted to signed-in users.
            </p>
        </div>
        <BlogAdmin client:load />
    </section>
</Layout>

